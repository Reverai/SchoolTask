@model IEnumerable<School.Models.Teacher>

@{
    ViewData["Title"] = "Учителя";
}

<h1>Учителя</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeacherId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.TeacherId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.TeacherId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
